<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="321px"
    android:background="@drawable/back_left_top">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42px"
        android:text="9:00"
        android:textColor="@color/color_333333"
        android:textSize="40px" />

    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_centerHorizontal="true"
        android:text="可约"
        android:textColor="@color/color_3CC5BC"
        android:textSize="40px" />


    <RelativeLayout
        android:id="@+id/infoLayout"
        android:layout_width="210px"
        android:layout_height="100px"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/state"
        android:layout_marginTop="28px"
        android:background="@drawable/back_orderprice"
        android:paddingLeft="7px"
        android:paddingRight="30px">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="86px"
            android:layout_height="86px"
            android:layout_centerVertical="true"
            android:src="@drawable/nim_avatar_default" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_dd_ddxq_jt" />
    </RelativeLayout>

</RelativeLayout>