<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topFuncLayout"
        android:layout_width="match_parent"
        android:layout_height="127px"
        android:layout_alignParentTop="true"
        android:background="@drawable/back_titlebar"
        android:paddingLeft="43px"
        android:paddingRight="43px">

        <ImageView
            android:id="@+id/toolbarBack"
            android:layout_width="88px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_yb_top_back" />


        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/appointmentIndicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/appointmentContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>