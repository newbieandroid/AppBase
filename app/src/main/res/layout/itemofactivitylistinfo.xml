<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="36px"
    android:layout_marginRight="36px"
    android:layout_marginTop="61px"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/time"
        android:layout_width="324px"
        android:layout_height="57px"
        android:background="@drawable/back_activitylist_time"
        android:gravity="center"
        android:text="1989/12/12 00:00"
        android:textColor="@color/color_white"
        android:textSize="35px" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31px"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingTop="54px">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="43px"
            android:paddingRight="43px"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="52px" />

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="match_parent"
            android:layout_height="396px"
            android:layout_marginLeft="43px"
            android:layout_marginRight="43px"
            android:layout_marginTop="35px"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43px"
            android:paddingLeft="43px"
            android:paddingRight="43px"
            android:singleLine="true"
            android:textColor="@color/color_888888"
            android:textSize="40px" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="126px"
            android:layout_marginTop="43px"
            android:background="@drawable/back_mainbottom"
            android:drawableRight="@mipmap/ic_my_set_help_jtleft"
            android:gravity="center_vertical"
            android:paddingLeft="43px"
            android:paddingRight="43px"
            android:singleLine="true"
            android:text="详情"
            android:textColor="@color/color_666666"
            android:textSize="40px" />
    </LinearLayout>
</LinearLayout>