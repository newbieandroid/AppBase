<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/includetopbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_margin="86px"
        android:layout_marginTop="221px"
        android:background="@drawable/back_titlebar">

        <EditText
            android:id="@+id/etAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="104px"
            android:layout_toLeftOf="@+id/countryCode"
            android:background="@android:color/transparent"
            android:drawableLeft="@mipmap/ic_login_tel"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/back_circle"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:text="18223138060"
            android:textColor="@color/color_aaaaaa"
            android:textColorHighlight="@color/color_aaaaaa"
            android:textSize="43px" />
        <!--csltest-->

        <TextView
            android:id="@+id/countryCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:drawableRight="@mipmap/ic_login_jt"
            android:text="(+86)"
            android:textColor="@color/color_333333"
            android:textSize="43px" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_marginLeft="86px"
        android:layout_marginRight="86px"
        android:background="@drawable/back_titlebar">

        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="104px"
            android:layout_toLeftOf="@+id/getSmsCode"
            android:background="@android:color/transparent"
            android:drawableLeft="@mipmap/ic_login_yzm"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="4"
            android:singleLine="true"
            android:text="8888"
            android:textColor="@color/color_aaaaaa"
            android:textColorHighlight="@color/color_aaaaaa"
            android:textSize="43px" />
        <!--7574a50c6006317da78e51cf7a43449c-->

        <TextView
            android:id="@+id/getSmsCode"
            android:layout_width="240px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/color_3CC5BC"
            android:textSize="43px" />

    </RelativeLayout>

    <TextView
        android:id="@+id/loginBtn"
        android:layout_width="907px"
        android:layout_height="124px"
        android:layout_marginTop="101px"
        android:background="@drawable/loginbtn"
        android:clickable="true"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/color_white"
        android:textSize="46px" />

    <TextView
        android:id="@+id/agreeTips"
        android:layout_width="907px"
        android:layout_height="wrap_content"
        android:layout_marginTop="44px"
        android:clickable="true"
        android:gravity="center"
        android:text="温馨提示：未注册三问帐号的手机号，登录时将自动注册，且代表您已同意《用户使用协议》"
        android:textColor="@color/color_aaaaaa"
        android:textSize="35px" />

    <RelativeLayout
        android:layout_width="907px"
        android:layout_height="wrap_content"
        android:layout_marginTop="470px"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:background="@color/color_dfdfdf" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="15px"
            android:paddingRight="15px"
            android:text="或者，您可以"
            android:textColor="@color/color_CCCCCC"
            android:textSize="37px" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/wChatLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="81px"
            android:layout_height="81px"
            android:layout_marginTop="58px"
            android:src="@mipmap/ic_login_weixin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29px"
            android:background="@android:color/white"
            android:text="微信快速登录"
            android:textColor="@color/color_CCCCCC"
            android:textSize="37px" />
    </LinearLayout>
</LinearLayout>