<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/backImg"
        android:layout_width="match_parent"
        android:layout_height="750px"
        android:scaleType="fitXY"
        android:src="@mipmap/img_my_top_bg" />


    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/headLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36px"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/myHeadIcon"
                android:layout_width="216px"
                android:layout_height="216px"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_my_wdltx" />


            <TextView
                android:id="@+id/nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23px"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:maxLength="10"
                android:singleLine="true"
                android:text="立即登录"
                android:textColor="@color/color_white"
                android:textSize="46px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/funcItemLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headLayout"
            android:layout_marginLeft="36px"
            android:layout_marginRight="36px"
            android:layout_marginTop="100px"
            android:background="@drawable/back_circle"
            android:orientation="vertical"
            android:paddingLeft="29px"
            android:paddingRight="29px">


            <!--收入-->
            <RelativeLayout
                android:id="@+id/inMoneyLayout"
                android:layout_width="match_parent"
                android:layout_height="135px"
                android:background="@drawable/back_titlebar"
                android:clickable="true"
                android:paddingLeft="37px"
                android:paddingRight="37px">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/icon_sellcard"
                    android:drawablePadding="10dp"
                    android:text="收入"
                    android:textColor="@color/color_666666"
                    android:textSize="40px" />


                <TextView
                    android:id="@+id/inMoneyArrorw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/ic_my_set_help_jtleft"
                    android:textColor="@color/color_aaaaaa"
                    android:textSize="40px" />
            </RelativeLayout>

            <!--预约表-->
            <RelativeLayout
                android:id="@+id/appointmentTimeLayout"
                android:layout_width="match_parent"
                android:layout_height="135px"
                android:background="@drawable/back_titlebar"
                android:clickable="true"
                android:paddingLeft="37px"
                android:paddingRight="37px">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/icon_sellcard"
                    android:drawablePadding="10dp"
                    android:text="预约表"
                    android:textColor="@color/color_666666"
                    android:textSize="40px" />


                <TextView
                    android:id="@+id/appointmentTimeArrorw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/ic_my_set_help_jtleft"
                    android:textColor="@color/color_aaaaaa"
                    android:textSize="40px" />
            </RelativeLayout>

            <!--编辑个人资料-->
            <RelativeLayout
                android:id="@+id/editInfoArrorwLayout"
                android:layout_width="match_parent"
                android:layout_height="135px"
                android:background="@drawable/back_titlebar"
                android:clickable="true"
                android:paddingLeft="37px"
                android:paddingRight="37px">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/editInfoArrorw"
                    android:layout_alignBottom="@+id/editInfoArrorw"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:drawableLeft="@mipmap/icon_sellcard"
                    android:drawablePadding="10dp"
                    android:text="编辑个人资料"
                    android:textColor="@color/color_666666"
                    android:textSize="40px" />


                <TextView
                    android:id="@+id/editInfoArrorw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/ic_my_set_help_jtleft"
                    android:textColor="@color/color_aaaaaa"
                    android:textSize="40px" />
            </RelativeLayout>


            <!--扫一扫-->
            <RelativeLayout
                android:id="@+id/scanLayout"
                android:layout_width="match_parent"
                android:layout_height="135px"
                android:background="@drawable/back_titlebar"
                android:clickable="true"
                android:paddingLeft="37px"
                android:paddingRight="37px">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/scanLayoutArrorw"
                    android:layout_alignBottom="@+id/scanLayoutArrorw"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:drawableLeft="@mipmap/icon_sellcard"
                    android:drawablePadding="10dp"
                    android:text="扫一扫"
                    android:textColor="@color/color_666666"
                    android:textSize="40px" />


                <TextView
                    android:id="@+id/scanLayoutArrorw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/ic_my_set_help_jtleft"
                    android:textColor="@color/color_aaaaaa"
                    android:textSize="40px" />
            </RelativeLayout>


            <!--客服电话-->
            <RelativeLayout
                android:id="@+id/callLayout"
                android:layout_width="match_parent"
                android:layout_height="135px"
                android:background="@drawable/back_titlebar"
                android:clickable="true"
                android:paddingLeft="37px"
                android:paddingRight="37px">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/ic_my_kftel"
                    android:drawablePadding="10dp"
                    android:text="客服电话"
                    android:textColor="@color/color_666666"
                    android:textSize="40px" />


                <TextView
                    android:id="@+id/callNumText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/ic_my_set_help_jtleft"
                    android:text="@string/serviceTell"
                    android:textColor="@color/color_aaaaaa"
                    android:textSize="40px" />
            </RelativeLayout>
            <!--意见反馈-->
            <RelativeLayout
                android:id="@+id/reportLayout"
                android:layout_width="match_parent"
                android:layout_height="135px"
                android:background="@drawable/back_titlebar"
                android:clickable="true"
                android:paddingLeft="37px"
                android:paddingRight="37px">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/ic_my_yjfk"
                    android:drawablePadding="10dp"
                    android:text="意见反馈"
                    android:textColor="@color/color_666666"
                    android:textSize="40px" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/ic_my_set_help_jtleft"
                    android:textColor="@color/color_aaaaaa"
                    android:textSize="40px" />
            </RelativeLayout>
            <!--奖励制度-->
            <RelativeLayout
                android:id="@+id/rewardRoleLayout"
                android:layout_width="match_parent"
                android:layout_height="135px"
                android:background="@drawable/back_titlebar"
                android:clickable="true"
                android:paddingLeft="37px"
                android:paddingRight="37px">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/ic_my_kftel"
                    android:drawablePadding="10dp"
                    android:text="奖励制度"
                    android:textColor="@color/color_666666"
                    android:textSize="40px" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/ic_my_set_help_jtleft"
                    android:textColor="@color/color_aaaaaa"
                    android:textSize="40px" />
            </RelativeLayout>

            <!--设置-->
            <RelativeLayout
                android:id="@+id/settingLayout"
                android:layout_width="match_parent"
                android:layout_height="135px"
                android:clickable="true"
                android:paddingLeft="37px"
                android:paddingRight="37px">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/ic_my_set"
                    android:drawablePadding="10dp"
                    android:text="设置"
                    android:textColor="@color/color_666666"
                    android:textSize="40px" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/ic_my_set_help_jtleft"
                    android:textColor="@color/color_aaaaaa"
                    android:textSize="40px" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>