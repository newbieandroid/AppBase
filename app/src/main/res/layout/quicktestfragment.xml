<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="60px"
        android:paddingLeft="36px"
        android:paddingRight="36px"
        android:paddingTop="60px"
        android:text="*闪测接单上限为30单，根据你当前的安排，来设置闪测接单量，闪测内容需在2个小时内回复用户，超时将影响你在平台的信用度，请合理安排单数。同时闪测单数需要每天设置，默认闪测单数为0."
        android:textColor="@color/color_666666"
        android:textSize="40px" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="158px"
        android:background="@drawable/back_titlebar"
        android:paddingLeft="36px"
        android:paddingRight="36px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="每日接单数"
            android:textColor="@color/color_666666"
            android:textSize="43px" />


        <LinearLayout
            android:layout_width="366px"
            android:layout_height="86px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_circle_dfdfdf"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reduceBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="一"
                android:textColor="@color/color_aaaaaa"
                android:textSize="43px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/color_dfdfdf" />

            <TextView
                android:id="@+id/resutInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLength="2"
                android:text="0"
                android:textColor="@color/color_3CC5BC"
                android:textSize="43px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/color_dfdfdf" />

            <TextView
                android:id="@+id/addBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="＋"
                android:textColor="@color/color_aaaaaa"
                android:textSize="43px" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="158px"
        android:background="@drawable/back_titlebar"
        android:paddingLeft="36px"
        android:paddingRight="36px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="剩余闪测可接单数"
            android:textColor="@color/color_666666"
            android:textSize="43px" />

        <TextView
            android:id="@+id/releaseCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="0"
            android:textColor="@color/color_FF627B"
            android:textSize="43px" />
    </RelativeLayout>
</LinearLayout>
