<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/includetopbar" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:background="@color/color_f3f3f3"
        android:gravity="center_vertical"
        android:paddingLeft="36px"
        android:text="*平台收取每单成功交易金额的20%作为平台服务费"
        android:textColor="@color/color_888888"
        android:textSize="35px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="317px"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingBottom="60px"
        android:paddingTop="60px">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/currentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="100"
                android:textColor="@color/color_3CC5BC"
                android:textSize="86px"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="47px"
                android:text="当月单数"
                android:textColor="@color/color_333333"
                android:textSize="37px" />
        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_dfdfdf" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">\

            <TextView
                android:id="@+id/totalCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="20"
                android:textColor="@color/color_3CC5BC"
                android:textSize="97px"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="47px"
                android:text="三月累计单数"
                android:textColor="@color/color_333333"
                android:textSize="37px" />
        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="21px"
        android:background="@color/color_f3f3f3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="161px"
            android:gravity="center_vertical"
            android:paddingLeft="36px"
            android:text="详细制度"
            android:textColor="@color/color_333333"
            android:textSize="55px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="36px"
            android:paddingRight="36px"
            android:text="● 当月交易到到30单，返点3%"
            android:textColor="@color/color_666666"
            android:textSize="40px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:paddingLeft="36px"
            android:paddingRight="36px"
            android:text="● 当月交易到达60单，返点5%"
            android:textColor="@color/color_666666"
            android:textSize="40px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:paddingLeft="36px"
            android:paddingRight="36px"
            android:text="● 当月交易到达100单，返点8%"
            android:textColor="@color/color_666666"
            android:textSize="40px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:paddingLeft="36px"
            android:paddingRight="36px"
            android:text="● 当月交易到达150单，返点12%"
            android:textColor="@color/color_666666"
            android:textSize="40px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:paddingLeft="36px"
            android:paddingRight="36px"
            android:text="● 连续三个月每月达到60单以上或累计达到180单，额外季度奖金100元"
            android:textColor="@color/color_666666"
            android:textSize="40px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:paddingLeft="36px"
            android:paddingRight="36px"
            android:text="● 连续三个月每月达到100单以上或累计达到300单，额外季度奖金200元"
            android:textColor="@color/color_666666"
            android:textSize="40px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:paddingLeft="36px"
            android:paddingRight="36px"
            android:text="● 连续三个月每月达到150单以上或累计达到450单，额外季度奖金300元"
            android:textColor="@color/color_666666"
            android:textSize="40px" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108px"
        android:paddingLeft="36px"
        android:paddingRight="36px"
        android:text="*每日交易量，直接影响预测师及宝贝的曝光率"
        android:textColor="@color/color_888888"
        android:textSize="35px" />
</LinearLayout>