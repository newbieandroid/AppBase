<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/includetopbar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="22px"
        android:background="@color/color_f5f5f5" />


    <RelativeLayout
        android:id="@+id/clearCacheLayout"
        android:layout_width="match_parent"
        android:layout_height="158px"
        android:background="@drawable/back_titlebar"
        android:clickable="true"
        android:paddingLeft="76px"
        android:paddingRight="76px">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/icon_help"
            android:drawablePadding="10dp"
            android:text="清除缓存"
            android:textColor="@color/color_333333"
            android:textSize="43px" />

        <TextView
            android:id="@+id/cacheSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_CCCCCC"
            android:textSize="43px" />
    </RelativeLayout>


    <TextView
        android:id="@+id/aboutAppBtn"
        android:layout_width="match_parent"
        android:layout_height="158px"
        android:layout_centerVertical="true"
        android:background="@drawable/back_titlebar"
        android:clickable="true"
        android:drawableLeft="@mipmap/icon_aboutapp"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/ic_my_set_help_jtleft"
        android:gravity="center_vertical"
        android:paddingLeft="76px"
        android:paddingRight="76px"
        android:text="关于三问"
        android:textColor="@color/color_333333"
        android:textSize="43px" />


    <RelativeLayout
        android:id="@+id/appVersionLayout"
        android:layout_width="match_parent"
        android:layout_height="158px"
        android:background="@drawable/back_titlebar"
        android:clickable="true"
        android:paddingLeft="76px"
        android:paddingRight="76px">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/icon_versioninfo"
            android:drawablePadding="10dp"
            android:text="当前版本"
            android:textColor="@color/color_333333"
            android:textSize="43px" />

        <TextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2.0"
            android:textColor="@color/color_CCCCCC"
            android:textSize="43px" />
    </RelativeLayout>


    <TextView
        android:id="@+id/helpBtn"
        android:layout_width="match_parent"
        android:layout_height="158px"
        android:layout_centerVertical="true"
        android:background="@drawable/back_titlebar"
        android:clickable="true"
        android:drawableLeft="@mipmap/icon_help"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/ic_my_set_help_jtleft"
        android:gravity="center_vertical"
        android:paddingLeft="76px"
        android:paddingRight="76px"
        android:text="帮助"
        android:textColor="@color/color_333333"
        android:textSize="43px" />


    <TextView
        android:id="@+id/exitBtn"
        android:layout_width="match_parent"
        android:layout_height="158px"
        android:background="@drawable/back_titlebar"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="76px"
        android:paddingRight="76px"
        android:text="退出登录"
        android:textColor="@color/color_333333"
        android:textSize="46px" />
</LinearLayout>